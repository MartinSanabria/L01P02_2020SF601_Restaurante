@model IEnumerable<L01P02_2020SF601_Restaurante.Models.motoristas>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a type="button" class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombreMotorista)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombreMotorista)
            </td>
            <td>
                    <a type="button" class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.motoristaId">Edit</a> 
                    <a type="button" class="btn btn-info" asp-action="Details" asp-route-id="@item.motoristaId">Details</a> 
                    <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.motoristaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
