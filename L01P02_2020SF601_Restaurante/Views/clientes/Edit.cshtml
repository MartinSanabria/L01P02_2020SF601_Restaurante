@model L01P02_2020SF601_Restaurante.Models.clientes

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1>Editar cliente</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="clienteId" />
                <div class="form-group">
                    <label asp-for="nombreCliente" class="control-label"></label>
                    <input asp-for="nombreCliente" class="form-control" />
                    <span asp-validation-for="nombreCliente" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="direccion" class="control-label"></label>
                    <input asp-for="direccion" class="form-control" />
                    <span asp-validation-for="direccion" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a type="button" class="btn btn-outline-secondary mt-3" asp-action="Index">Regresar</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</div>

